generator client {
  provider = "prisma-client-js"
}
datasource db {
  provider = "postgresql"
}


enum UserRole {
  USER
  HOST
  ADMIN
}

enum UserStatus {
  ACTIVE
  BLOCKED
  DELETED
}

model Event {
  id              String             @id @default(uuid())
  title           String
  type            String
  description     String?
  date            DateTime
  location        String
  image           String?
  minParticipants Int?
  maxParticipants Int?
  fee             Float              @default(0)
  status          String             @default("OPEN")

  hostId     String
  host       User               @relation("HostEvents", fields: [hostId], references: [id])

  participants EventParticipant[]
  reviews      Review[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}


model EventParticipant {
  id        String   @id @default(uuid())
  userId    String
  eventId   String
  joinedAt  DateTime @default(now())

  user  User  @relation(fields: [userId], references: [id])
  event Event @relation(fields: [eventId], references: [id])

  @@unique([userId, eventId])
}


model Review {
  id        String   @id @default(uuid())
  rating    Int
  comment   String?
  createdAt DateTime @default(now())

  eventId String
  hostId  String
  userId  String

  event Event @relation(fields: [eventId], references: [id])
  host  User  @relation("ReviewsForHost", fields: [hostId], references: [id])
  user  User  @relation("ReviewsByUser", fields: [userId], references: [id])
}


model User {
  id           String     @id @default(uuid())
  name         String
  email        String     @unique
  password     String
  role         UserRole   @default(USER)
  bio          String?
  interests    String[]
  location     String?
  profileImage String?
  avgRating    Float      @default(0)
  status       UserStatus @default(ACTIVE)
  needPasswordChange Boolean   @default(true)

  hostedEvents      Event[]            @relation("HostEvents")
  eventParticipants EventParticipant[]
  reviewsGiven      Review[]           @relation("ReviewsByUser")
  reviewsReceived   Review[]           @relation("ReviewsForHost")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
