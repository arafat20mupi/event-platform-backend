generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum UserRole {
  USER
  HOST
  ADMIN
}

enum UserStatus {
  ACTIVE
  BLOCKED
  DELETED
}

model Event {
  id              String   @id @default(uuid())
  title           String
  type            String
  description     String?
  date            DateTime
  location        String
  image           String?
  minParticipants Int?
  maxParticipants Int?
  fee             Float    @default(0)
  status          String   @default("OPEN")

  hostId String
  host   Host?  @relation("HostEvents", fields: [hostId], references: [id])

  participants EventParticipant[]
  reviews      Review[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model EventParticipant {
  id       String   @id @default(uuid())
  userId   String
  eventId  String
  joinedAt DateTime @default(now())

  user  User  @relation(fields: [userId], references: [id])
  event Event @relation(fields: [eventId], references: [id])

  @@unique([userId, eventId])
}

model Review {
  id        String   @id @default(uuid())
  rating    Int
  comment   String?
  createdAt DateTime @default(now())

  eventId String
  hostId  String
  userId  String

  event Event @relation(fields: [eventId], references: [id])
  host  User  @relation("ReviewsForHost", fields: [hostId], references: [id])
  user  User  @relation("ReviewsByUser", fields: [userId], references: [id])
}

model User {
  id                 String     @id @default(uuid())
  name               String?
  phoneNumber        String?
  profileImage       String?
  address            String?
  dob                DateTime?
  gender             String?
  email              String     @unique
  password           String
  role               UserRole   @default(USER)
  status             UserStatus @default(ACTIVE)
  needPasswordChange Boolean    @default(false)
  interests       String[]

  // base timestamps
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // relation to extra profiles
  admin Admin?
  host  Host?

  // Events & Reviews relation

  eventParticipants EventParticipant[]
  reviewsGiven      Review[]           @relation("ReviewsByUser")
  reviewsReceived   Review[]           @relation("ReviewsForHost")

  @@map("users")
}

model EventCategory {
  id        String   @id @default(uuid())
  name      String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Host {
  id                String   @id @default(uuid())
  userId            String   @unique // ১টা User = ১টা Host profile (max)
  displayName       String
  bio               String?
  location          String?
  profileImage      String?
  avgRating         Float    @default(0)
  totalHostedEvents Int      @default(0)
  isVerified        Boolean  @default(false)
  isDeleted         Boolean  @default(false)
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  user         User    @relation(fields: [userId], references: [id])
  hostedEvents Event[] @relation("HostEvents")

  @@map("hosts")
}

model Admin {
  id            String   @id @default(uuid())
  userId        String   @unique // প্রতিটা user-র জন্য সর্বোচ্চ ১জন admin entry
  name          String
  profileImage  String?
  contactNumber String?
  isDeleted     Boolean  @default(false)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  user User @relation(fields: [userId], references: [id])

  @@map("admins")
}
